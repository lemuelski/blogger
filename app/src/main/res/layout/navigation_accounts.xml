<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darker_secondary_bg"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <ImageView
        android:layout_marginTop="@dimen/dp_50"
        android:id="@+id/user_photo"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_above="@+id/user_name"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/dp_10"
        android:text="Lemuel Castro"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_15" />

    <LinearLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/facebook_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/fb_logo" />

        <ImageView
            android:id="@+id/twitter_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:background="@drawable/twitter_logo" />
    </LinearLayout>


</LinearLayout>